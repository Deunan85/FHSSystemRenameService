<Window x:Class="FHSSystemRenameClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Open File" Height="23" HorizontalAlignment="Left" Margin="383,40,0,0" Name="btOpenFile" VerticalAlignment="Top" Width="108" Click="btOpenFile_Click" />
        <DataGrid AutoGenerateColumns="True" Height="200" HorizontalAlignment="Left" Margin="12,99,0,0" Name="dataGrid1" VerticalAlignment="Top" Width="479"
                  ItemsSource="{Binding ComputerList}" AlternationCount="1" CanUserAddRows="True" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,41,0,0" Name="tbFileName" VerticalAlignment="Top" Width="365" />
        <Button Content="Rename Computers" Height="23" HorizontalAlignment="Left" Margin="12,70,0,0" Name="btRenameComputer" VerticalAlignment="Top" Width="479" Click="btRenameComputer_Click" />
    </Grid>
</Window>
